# Copy this file to .env and fill in your own values

# Discord Configuration
DISCORD_TOKEN=YOUR_BOT_TOKEN
CLIENT_ID=YOUR_APPLICATION_ID

# Development Configuration (Optional)
# GUILD_ID is now OPTIONAL - commands register globally automatically
# Only set GUILD_ID for instant command registration during development
# GUILD_ID=YOUR_DEVELOPMENT_SERVER_ID

# External APIs (Optional)
# OMDb API key for movie info (http://www.omdbapi.com/apikey.aspx)
OMDB_API_KEY=YOUR_OMDB_API_KEY

# IMDb cache (cross-guild)
IMDB_CACHE_ENABLED=true
IMDB_CACHE_TTL_DAYS=90
IMDB_CACHE_MAX_ROWS=10000

# Logging Configuration
# LOG_LEVEL: ERROR, WARN, INFO, DEBUG (default: INFO)
# ERROR: Only critical errors
# WARN: Errors and warnings
# INFO: Errors, warnings, and general information
# DEBUG: All logging including detailed debug information
LOG_LEVEL=INFO
# LOG_COLORS: true/false - enables colored console output (default: true)
LOG_COLORS=true

# Storage Options (choose one):

# Option 1: MySQL Database (recommended for production)
DB_HOST=YOUR_DB_HOST
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=YOUR_DB_NAME

# Database migrations toggle (default: disabled)
# Set to true to run schema migrations on startup
DB_MIGRATIONS_ENABLED=false

# Option 2: JSON File Storage (simple alternative)
# USE_JSON_STORAGE=true

# Option 3: Memory-Only (no persistence)
# Leave all storage options blank for memory-only mode


# Web Dashboard WebSocket Bridge (bot-initiated)
# Enable to connect the bot to the dashboard via WebSocket. The dashboard validates WATCHPARTY_WS_TOKEN.
# Token is generated by Terraform and stored in AWS Secrets Manager (one-time per env) and must be pasted here.
# Fetch beta token:
#   aws secretsmanager get-secret-value --secret-id watchparty-dashboard/beta/ws --query SecretString --output text
# Then copy the "token" field value into WATCHPARTY_WS_TOKEN below.
WATCHPARTY_WS_ENABLED=false
# Beta URL: wss://bot-watchparty-beta.bermanoc.net/socket
# Prod URL: wss://bot-watchparty.bermanoc.net/socket
WATCHPARTY_WS_URL=
WATCHPARTY_WS_TOKEN=
