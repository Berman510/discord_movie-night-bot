{
  "name": "watch-party-bot",
  "version": "1.16.0-rc1",
  "description": "Discord bot for creating watch party recommendations with voting, threads, IMDb enrichment, and forum support for movies and TV shows.",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "ci": "npm run lint:ci && npm run format:check && npm test"
  },
  "dependencies": {
    "discord.js": "^14.15.3",
    "dotenv": "^17.2.2",
    "fuse.js": "^7.1.0",
    "jimp": "^0.22.12",
    "mysql2": "^3.6.5",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-circus": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  }
}
